{
  "name": "zeldammo",
  "description": "A recreation of Zelda link's awakening using phaser and colyseum",
  "homepage": "http://zelda.herokuapp.com",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git://github.com/jerzual/zeldammo.git"
  },
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "tsc && vite build",
    "build:server": "esbuild server/app.ts --platform=node --minify --outfile=dist/server/index.js",
    "start": "node ./dist/server/index.js",
    "dev": "npm run dev:client & npm run dev:server",
    "dev:server": "NODE_OPTIONS='--loader ts-node/esm' node server/app.ts -- --trace-warnings",
    "dev:client": "vite",
    "test": "vitest"
  },
  "dependencies": {
    "@prisma/client": "^4.10.1",
    "colyseus": "^0.14.24",
    "colyseus.js": "^0.14.13",
    "express": "^4.18.2",
    "fp-ts": "^2.13.1",
    "lodash-es": "^4.17.21",
    "nanoid": "^4.0.1",
    "phaser": "^3.55.2",
    "pino": "^8.11.0",
    "pino-http": "^8.3.3",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.14.1",
    "prisma": "^4.10.1",
    "sass": "^1.58.3",
    "sqlite3": "^5.1.4",
    "supertest": "^6.3.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vitest": "^0.28.5"
  },
  "engines": {
    "node": ">= 18.0.x"
  },
  "type": "module"
}
