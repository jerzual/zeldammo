{
  "name": "zeldammo",
  "description": "A recreation of Zelda link's awakening using phaser and colyseum",
  "homepage": "http://zelda.herokuapp.com",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git://github.com/jerzual/zeldammo.git"
  },
  "scripts": {
    "dev": "node server",
    "start": "node server",
    "build": "npm run build:client && npm run build:server && npm run build:game-server",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "build:game-server": "vite build --ssr src/server/game-server.ts --outDir dist/game",
    "preview": "cross-env NODE_ENV=production node server",
    "test": "vitest"
  },
  "dependencies": {
    "@colyseus/core": "^0.15.27",
    "@colyseus/ws-transport": "^0.15.1",
    "@react-three/drei": "^9.102.6",
    "@react-three/fiber": "^8.15.19",
    "@react-three/rapier": "^1.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "colyseus.js": "^0.15.18",
    "compression": "^1.7.4",
    "drizzle-orm": "^0.29.5",
    "express": "^4.19.1",
    "fp-ts": "^2.16.4",
    "helmet": "^7.1.0",
    "leva": "^0.9.35",
    "nanoid": "^4.0.2",
    "pg": "^8.11.3",
    "pino": "^8.19.0",
    "pino-http": "^8.6.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sirv": "^2.0.4",
    "three": "^0.162.0",
    "vite": "^5.2.2",
    "znv": "^0.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.11.4",
    "@types/react": "^18.2.67",
    "@types/react-dom": "^18.2.22",
    "@types/three": "^0.162.0",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.20.14",
    "sass": "^1.72.0",
    "typescript": "^5.4.3",
    "vitest": "^1.4.0"
  },
  "engines": {
    "node": ">=20.x"
  },
  "type": "module"
}
